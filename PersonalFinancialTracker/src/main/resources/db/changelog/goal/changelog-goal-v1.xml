<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">
    <changeSet id="001-create-goal-table" author="dkowalki25">
        <createTable tableName="goals">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('universal_id_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_goals_user" references="users(id)"/>
            </column>
            <column name="goal_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="goal_amount" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="current_amount" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="saved_amount" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>